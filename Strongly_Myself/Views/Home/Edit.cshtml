@model Strongly_Myself.Models.PersonViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<hr />
<form action="/Home/Edit/@Model.ID" method="post">
    <dl class="d-lg-block">
        <dt>Name</dt>
        <dd><input class="form-control" type="text" name="Name" value="@Model.Name" /></dd>
        <dt>Email</dt>
        <dd><input class="form-control" type="email" name="Email" value="@Model.Email" /></dd>
        <dt>Phone</dt>
        <dd><input class="form-control" type="text" name="Phone" value="@Model.Phone" /></dd>
        <dt>Car Model</dt>
        <dd><input class="form-control" type="text" name="CarModel" value="@Model.CarModel" /></dd>
        <dt>Car Reg No.</dt>
        <dd><input class="form-control" type="text" name="CarPlaque" value="@Model.CarPlaque" /></dd>

        <dd><input class="btn btn-warning" type="submit" name="Update" value="Update" /></dd>

    </dl>


</form>

